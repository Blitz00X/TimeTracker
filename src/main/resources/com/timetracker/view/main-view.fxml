<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timetracker.controller.MainController"
      spacing="16.0"
      style="-fx-background-color: #F3F3F3; -fx-padding: 16;">

    <!-- Left Panel: Categories -->
    <VBox spacing="12" prefWidth="200" maxWidth="220" minWidth="180"
          style="-fx-background-color: #FFFFFF; -fx-border-color: #D8D8D8; -fx-border-width: 1; -fx-padding: 16;">
        <Label text="Categories" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
        <ListView fx:id="categoryListView" prefHeight="420"/>
        <HBox spacing="8">
            <Button fx:id="addCategoryButton" text="Add Category" onAction="#onAddCategory" />
            <Button text="Edit" onAction="#onEditCategory" />
        </HBox>
        <Button text="Delete Category" onAction="#onDeleteCategory"/>
        <Label text="Tip: right-click a category for more actions" wrapText="true"
               style="-fx-text-fill: #555; -fx-font-size: 11px;"/>
    </VBox>

    <!-- Center Panel: Timer + Today -->
    <VBox spacing="24" alignment="TOP_CENTER" HBox.hgrow="ALWAYS"
          style="-fx-background-color: #FFFFFF; -fx-border-color: #D8D8D8; -fx-border-width: 1; -fx-padding: 24;">

        <!-- Timer Block -->
        <VBox spacing="12" alignment="CENTER">
            <Label fx:id="timerLabel" text="00:00:00"
                   style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
            <Label fx:id="selectedCategoryLabel" text="Selected Category: -"
                   style="-fx-font-size: 20px; -fx-text-fill: #222;"/>
            <Label fx:id="remainingTimeLabel" text="Remaining Today: -" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <Label fx:id="startTimeLabel" text="Start Time: -" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <Label fx:id="statusLabel" text="Status: Idle" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="startStopButton" text="Start" onAction="#onStartStop" prefWidth="110"/>
                <Button fx:id="resetButton" text="Reset" onAction="#onReset" disable="true" prefWidth="110"/>
                <ComboBox prefWidth="130">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Normal"/>
                            <String fx:value="Pomodoro"/>
                            <String fx:value="Locked Mode"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
        </VBox>

        <!-- Timeline -->
        <VBox spacing="8" alignment="CENTER_LEFT" maxWidth="Infinity" prefWidth="600">
            <Label text="Todayâ€™s Breakdown" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
            <StackPane prefHeight="80" style="-fx-background-color: #F3F3F3; -fx-border-color: #D8D8D8; -fx-border-width: 1;">
                <ListView fx:id="timelineListView" style="-fx-background-color: transparent;" />
            </StackPane>
            <HBox spacing="10">
                <Button text="Export Day (.ics)" onAction="#onExportTodayIcs"/>
                <Button text="Export Day (.csv)" onAction="#onExportTodayCsv"/>
            </HBox>
        </VBox>

        <!-- Today Summary (manual) -->
        <VBox spacing="8" alignment="CENTER_LEFT" maxWidth="Infinity" prefWidth="600">
            <Label text="Today Summary" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
            <ListView prefHeight="140" />
        </VBox>
    </VBox>

    <!-- Right Panel: Auto Usage Inspector -->
    <VBox spacing="12" prefWidth="360" minWidth="320" maxWidth="Infinity"
          style="-fx-background-color: #FFFFFF; -fx-border-color: #D8D8D8; -fx-border-width: 1; -fx-padding: 16;">
        <TabPane prefWidth="340">
            <tabs>
                <Tab text="Today" closable="false">
                    <content>
                        <VBox spacing="10">
                            <Label text="Today view located in center panel." style="-fx-text-fill: #555;"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Auto Usage" closable="false">
                    <content>
                        <VBox spacing="10">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Auto tracking" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
                                <DatePicker fx:id="autoDatePicker"/>
                                <CheckBox fx:id="trackingPauseToggle" text="Pause" onAction="#onToggleTracking"/>
                                <Button text="Refresh" onAction="#onRefreshAuto"/>
                                <Button fx:id="autoExportButton" text="Export (.csv)" onAction="#onExportAutoCsv"/>
                            </HBox>
                            <TableView fx:id="autoTotalsTable" minWidth="320" prefHeight="360">
                                <columns>
                                    <TableColumn fx:id="autoAppColumn" text="App/Site" prefWidth="140"/>
                                    <TableColumn fx:id="autoUrlColumn" text="Domain/Title" prefWidth="140"/>
                                    <TableColumn fx:id="autoDurationColumn" text="Duration" prefWidth="90"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="History" closable="false">
                    <content>
                        <VBox spacing="10">
                            <Label text="History" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <VBox spacing="5">
                                    <Label text="From" />
                                    <DatePicker fx:id="rangeStartDatePicker"/>
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="To" />
                                    <DatePicker fx:id="rangeEndDatePicker"/>
                                </VBox>
                                <Button text="Refresh" onAction="#onRefreshRange"/>
                            </HBox>
                            <Label fx:id="rangeErrorLabel" textFill="#cc0000"/>
                            <ListView fx:id="historyListView" prefHeight="140"/>
                            <Label text="Category Summary" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #222;"/>
                            <TableView fx:id="summaryTable" prefHeight="120">
                                <columns>
                                    <TableColumn fx:id="summaryCategoryColumn" text="Category" prefWidth="180"/>
                                    <TableColumn fx:id="summaryDurationColumn" text="Minutes" prefWidth="100"/>
                                </columns>
                            </TableView>
                            <HBox spacing="10">
                                <Button fx:id="exportRangeIcsButton" text="Export Range (.ics)" onAction="#onExportRangeIcs"/>
                                <Button fx:id="exportRangeCsvButton" text="Export Range (.csv)" onAction="#onExportRangeCsv"/>
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
</HBox>
