<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.timetracker.controller.MainController">
    <left>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Categories"/>
            <ListView fx:id="categoryListView" prefWidth="200" prefHeight="400"/>
            <Button fx:id="addCategoryButton" text="Add Category" onAction="#onAddCategory"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="15" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <Label fx:id="timerLabel" text="00:00:00" style="-fx-font-size: 48px; -fx-font-weight: bold;"/>
            <Label fx:id="selectedCategoryLabel" text="Selected Category: -" style="-fx-font-size: 16px;"/>
            <Label fx:id="remainingTimeLabel" text="Remaining Today: -" style="-fx-font-size: 14px;"/>
            <Label fx:id="startTimeLabel" text="Start Time: -" style="-fx-font-size: 14px;"/>
            <Label fx:id="statusLabel" text="Status: Idle" style="-fx-font-size: 14px;"/>
            <HBox spacing="10">
                <Button fx:id="startStopButton" text="Start" onAction="#onStartStop"/>
                <Button fx:id="resetButton" text="Reset" onAction="#onReset" disable="true"/>
            </HBox>
        </VBox>
    </center>
    <right>
        <TabPane prefWidth="300" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Today" closable="false">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>
                            <Label text="Today"/>
                            <ListView fx:id="timelineListView" prefWidth="250" prefHeight="260"/>
                            <HBox spacing="10">
                                <Button text="Export Day (.ics)" onAction="#onExportTodayIcs"/>
                                <Button text="Export Day (.csv)" onAction="#onExportTodayCsv"/>
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="History" closable="false">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>
                            <Label text="History"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <VBox spacing="5">
                                    <Label text="From"/>
                                    <DatePicker fx:id="rangeStartDatePicker"/>
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="To"/>
                                    <DatePicker fx:id="rangeEndDatePicker"/>
                                </VBox>
                                <Button text="Refresh" onAction="#onRefreshRange"/>
                            </HBox>
                            <Label fx:id="rangeErrorLabel" textFill="#cc0000"/>
                            <ListView fx:id="historyListView" prefWidth="250" prefHeight="180"/>
                            <Label text="Category Summary"/>
                            <TableView fx:id="summaryTable" prefHeight="140">
                                <columns>
                                    <TableColumn fx:id="summaryCategoryColumn" text="Category" prefWidth="170"/>
                                    <TableColumn fx:id="summaryDurationColumn" text="Minutes" prefWidth="80"/>
                                </columns>
                            </TableView>
                            <HBox spacing="10">
                                <Button fx:id="exportRangeIcsButton" text="Export Range (.ics)" onAction="#onExportRangeIcs"/>
                                <Button fx:id="exportRangeCsvButton" text="Export Range (.csv)" onAction="#onExportRangeCsv"/>
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </right>
</BorderPane>
